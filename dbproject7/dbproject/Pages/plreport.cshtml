@page
@model dbproject.Pages.plreportModel
@{
    Layout = null;
}
<head>
    <title>PL Report</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        * {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }

        .Bold {
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        }

        canvas {
            max-width: 100%;
            height: auto;
        }

        .cont {
            min-height: 100vh;
            background: linear-gradient(225deg,#17061c,#22192b,#30123e);
            background-size: 300% 300%;
        }

        .container {
            display: flex;
            flex-wrap: wrap;
            align-items: stretch;
            justify-content: space-between;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .chart {
            font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
            flex-basis: 100%;
            max-width: 500px;
            background-color: #fff;
            border-radius: 20px;
            padding: 20px;
            transition: 1s;
            display: flex;
            margin-left:300px;
            align-items: stretch;
        }




        .small-box {
            font-family: 'Inconsolata', monospace;
            display: flex;
            flex-basis: 100%;
            max-width: 300px;
            margin: 20px 0;
            margin-top: 200px;
            margin-left: 500px;
            position: absolute;
            background-color: #fff;
            border-radius: 20px;
            justify-content: center;
            padding: 75px;
            transition: 1s;
        }

        .big-box {
            font-family: 'Inconsolata', monospace;
            display: flex;
            flex-basis: 100%;
            max-width: 1100px;
            margin: 20px 0;
            background-color: #fff;
            border-radius: 20px;
            padding: 80px;
            transition: 1s;
        }

        .column {
            flex: 1;
            padding: 10px;
        }

        .big-box:hover {
            transform: scale(1.1);
        }

        .small-box:hover {
            transform: scale(1.1);
        }



        @@media (min-width: 768px) {
            .container {
                padding: 40px;
            }


            .big-box {
                flex-basis: 100%;
                margin: 20px 0;
            }

            .small-box {
                flex-basis: 100%;
                margin: 20px 0;
                margin-left: 370px;
            }
        }

        @@media (min-width: 1200px) {
            .container {
                padding: 60px;
            }

            .big-box {
                flex-basis: 100%;
                margin: 20px 0;
            }

            .small-box {
                flex-basis: 100%;
                margin: 20px 0;
                margin-left: 370px;
            }
        }
    </style>
</head>
<body>
    <div class="cont">
        <div class="container">
            
            <div class="big-box">
                    <div class="chart">
                        
                        <div class="chart-container">
                            <canvas id="myChart"></canvas>
                        </div>
                        <script>
                            var ctx = document.getElementById('myChart').getContext('2d');
                            var revenue=@Model.r[0].income;
                            var profit_or_loss=revenue;
                            var expenditure=@Model.r[0].cost;
                            profit_or_loss=profit_or_loss-expenditure;
                            var str;
                            if(profit_or_loss>=0){
                                str="Profit";
                            }
                            else{
                                profit_or_loss = profit_or_loss*-1;
                                str="Loss";
                            }
                       
                            var myChart = new Chart(ctx, {
                                type: 'doughnut',
                                data: {
                                    labels: ['Revenue', 'Cost', str],
                                    datasets: [{
                                        label: 'Report',
                                        data: [revenue, expenditure, profit_or_loss],
                                        backgroundColor: [
                                            'rgb(255, 99, 132)',
                                            'rgb(255, 159, 64)',
                                            'rgb(255, 205, 86)',
                                        ]
                                    }]
                                },
                                
                                options: {
                                    plugins: {
                                        datalabels: {
                                            formatter: (value) => {
                                                return value + '%';
                                            },
                                        },
                                    },
                                },
                            });
                        </script>
                    </div>
            </div>

        </div>

    </div>
</body>