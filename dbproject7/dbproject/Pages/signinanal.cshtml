@page
@model dbproject.Pages.signinanalModel

@using dbproject.Pages
@{
    Layout = null;
}
<head>
    <title>Log in As Analyst</title>
    <style>
        * {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }

        .Bold {
            font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        }

        canvas {
            max-width: 100%;
            height: auto;
        }

        .cont {
            min-height: 100vh;
            background: linear-gradient(225deg,#17061c,#22192b,#30123e);
            background-size: 300% 300%;
        }

        .container {
            display: flex;
            flex-wrap: wrap;
            align-items: stretch;
            justify-content: space-between;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .chart {
            font-family: 'Bebas Neue', cursive;
            flex-basis: 100%;
            max-width: 500px;
            margin: 20px 0;
            background-color: #fff;
            border-radius: 20px;
            padding: 20px;
            transition: 1s;
        }

       


        .small-box {
            font-family: 'Inconsolata', monospace;
            display: flex;
            flex-basis: 100%;
            max-width: 300px;
            margin: 20px 0;
            margin-top:200px;
            margin-left: 500px;
            position:absolute;
            background-color: #fff;
            border-radius: 20px;
            justify-content: center;
            padding: 75px;
            transition: 1s;
        }

        .big-box {
            font-family: 'Inconsolata', monospace;
            display: flex;
            flex-basis: 100%;
            max-width: 1250px;
            margin: 20px 0;
            background-color: #fff;
            border-radius: 20px;
            padding: 100px;
            transition: 1s;
        }

        .column {
            flex: 1;
            padding: 10px;
        }

        .big-box:hover {
            transform: scale(1.1);
        }

        .small-box:hover {
            transform: scale(1.1);
        }

    

        @@media (min-width: 768px) {
            .container {
                padding: 40px;
            }


            .big-box {
                flex-basis: 100%;
                margin: 20px 0;
            }

            .small-box {
                flex-basis: 100%;
                margin: 20px 0;
                margin-left:370px;
            }
        }

        @@media (min-width: 1200px) {
            .container {
                padding: 60px;
            }
            .big-box {
                flex-basis: 100%;
                margin: 20px 0;
            }

            .small-box {
                flex-basis: 100%;
                margin: 20px 0;
                margin-left:370px;
            }
        }
    </style>
</head>
<body>
    <div class="cont">
        <div class="container">
            <div class="small-box">
                <div class="container">
                    <div class="Bold">
                        <h2>Analyst</h2>
                    </div>
                    <div class="row">
                        <div class="col-sm-4"></div>
                        <div class="col-sm-4">
                            <form method="post">
                                <div class="form-group">
                                    <label for="username">Username:</label>
                                    <input type="text" class="form-control" id="username" name="username">
                                </div>
                                <div class="form-group">
                                    <label for="password">Password:</label>
                                    <input type="password" class="form-control" id="password" name="password">
                                </div>
                                <button type="submit" class="btn btn-primary">Login</button>
                            </form>

                        </div>
                        <div class="col-sm-4"></div>
                    </div>
                </div>
            </div>

        </div>
        
    </div>
        
    

</body>

@{
    if (TempData["msg"] != null)
    {
        <script>
            alert('@TempData["msg"]')
        </script>
    }
}
