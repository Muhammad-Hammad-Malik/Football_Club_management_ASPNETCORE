@page
@model dbproject.Pages.xcoachModel
@{
    Layout = null;
}
<head>
    <link rel="stylesheet" href="schedule4.css">
    <style>
        .createbutton {
            position: absolute;
            top: 20%;
            right: 200px;
            transform: translate(50%, -50%);
        }
    </style>
    <title></title>
</head>
<body>
    
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Role</th>
                    <th>X</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.listofassists)
                {
                    <tr>
                        <td>@item.fn</td>
                        <td>@item.ln</td>
                        <td>@item.r</td>
                        <td>
                            <a class="btn btn-primary btn-sm" href="xcoachedit?cid=@item.cid">EDIT</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>